<div class="row">
  <div class="col-md-6">
    <%= form.text_field :name, class: "form-control input-sm", placeholder: "Item" %>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-3">
        <%= form.number_field :quantity, class: "form-control input-sm quantity", step: "0.01" %>
      </div>
      <div class="col-md-4">
        <%= form.number_field :unit_price, class: "form-control input-sm price text-right", step: "0.01" %>
      </div>
      <div class="col-md-4">
        <%= form.number_field :total, class: "form-control input-sm text-right", step: "0.01" , readonly: true %>
      </div>
      <div class="col-md-1">
        <%= form.link_to_remove class: "btn btn-danger btn-sm remove-item" do  %>
          <i class="glyphicon glyphicon-remove"></i>
        <%end %>
      </div>
    </div>
  </div>
</div>


